<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dm015">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dm010"
            android:layout_marginTop="@dimen/dm010"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/biankuang_gray"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#999999"
                    android:id="@+id/pop_knowledge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010"
                    android:text="回复 楼主:"
                    android:textSize="@dimen/dm022" />

                <EditText
                    android:textColor="@color/gray"
                    android:id="@+id/pop_knowledge_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="请填入回复内容"
                    android:padding="@dimen/dm010"
                    android:textColorHint="#D2D2D2"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pop_knowledge_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/approve_shixin_blue"
                    android:gravity="center"
                    android:padding="@dimen/dm005"
                    android:text="发表"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm024" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>