<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1">

        <cn.net.bjsoft.sxdz.view.RoundImageView
            android:id="@+id/proposal_item_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/wlh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="9"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/proposal_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:text="名字"
                android:textSize="@dimen/dm026" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/proposal_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="560"
                    android:textSize="@dimen/dm020" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proposal_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="2017.01.13"
                android:textSize="@dimen/dm020" />

            <TextView
                android:id="@+id/proposal_item_dis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:text="描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，"
                android:textSize="@dimen/dm020" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>