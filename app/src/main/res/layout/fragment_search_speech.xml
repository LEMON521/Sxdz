<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:gravity="center_vertical"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/search_speech_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/speech_search"
                android:textColor="@color/gray"
                android:gravity="center"
                android:textSize="@dimen/dm033"/>
            <ImageView
                android:id="@+id/search_speech_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/common_back"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dm002"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按说话"
            android:textSize="@dimen/dm030"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dm061"/>
        <Button
            android:id="@+id/fragment_search_speech"
            android:layout_width="@dimen/dm150"
            android:layout_height="@dimen/dm150"
            android:background="@drawable/btn_blue"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/text"
            android:layout_marginBottom="@dimen/dm010"
            />
    </RelativeLayout>
</LinearLayout>
