<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.home.bartop.FunctionActivity">
    <include layout="@layout/top_title"
        android:id="@+id/include" />
    <FrameLayout
        android:id="@+id/function_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include">
    </FrameLayout>

    <!--<include
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        layout="@layout/function_tab" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/function_bar"
        >
        <!--扫一扫-->
        <RelativeLayout
            android:tag="scaning"
            android:id="@+id/function_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/function_scan_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/saoyisao_s"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/function_scan_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/function_scan_icon"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="扫一扫"
                android:textSize="@dimen/dm022"
                android:textColor="@color/blue"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/function_scan_img"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#e1edf9"/>
        <!--拍照-->
        <RelativeLayout
            android:tag="photo"
            android:id="@+id/funciton_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/function_photo_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/paizhao_n"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/function_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/function_photo_icon"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/dm022"
                android:text="拍照"/>
            <TextView
                android:id="@+id/function_photo_num"
                android:layout_width="@dimen/dm024"
                android:layout_height="@dimen/dm024"
                android:textSize="@dimen/dm018"
                android:background="@drawable/common_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/function_photo_text"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/function_photo_img"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#e1edf9"/>
        <!--签到-->
        <RelativeLayout
            android:tag="sign"
            android:id="@+id/function_sign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/function_sign_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/qiandao_n"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/function_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/function_sign_icon"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/dm022"
                android:text="签到"/>
            <TextView
                android:id="@+id/function_sign_num"
                android:layout_width="@dimen/dm024"
                android:layout_height="@dimen/dm024"
                android:textSize="@dimen/dm018"
                android:background="@drawable/common_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/function_sign_text"

                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/function_sign_img"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#e1edf9"/>
        <!--支付-->
        <RelativeLayout
            android:tag="pay"
            android:id="@+id/function_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/function_pay_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/pay_n"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/function_pay_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/function_pay_icon"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/dm022"
                android:text="支付"/>
            <TextView
                android:id="@+id/function_pay_num"
                android:layout_width="@dimen/dm024"
                android:layout_height="@dimen/dm024"
                android:textSize="@dimen/dm018"
                android:background="@drawable/common_red"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/function_pay_text"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/function_pay_img"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#e1edf9"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1edf9"
        android:layout_above="@+id/dibulan"/>
</RelativeLayout>
