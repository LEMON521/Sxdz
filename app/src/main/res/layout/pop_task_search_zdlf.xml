<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm180"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pop_task_search_zdlf_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dm020"
                android:src="@mipmap/task_search_zdlf_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm040"
            android:paddingRight="@dimen/dm070">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm010"
                android:paddingTop="@dimen/dm010">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务分类:"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/pop_task_search_zdlf_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:background="@mipmap/task_search_zdlf_drop_down_menu"
                    android:padding="@dimen/dm010"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm010"
                android:paddingTop="@dimen/dm010">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务性质:"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/pop_task_search_zdlf_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:background="@mipmap/task_search_zdlf_drop_down_menu"
                    android:padding="@dimen/dm010"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm010"
                android:paddingTop="@dimen/dm010">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间:"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <EditText
                    android:editable="false"
                    android:id="@+id/pop_task_search_zdlf_time_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:background="@mipmap/task_search_zdlf_date"
                    android:padding="@dimen/dm010"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm010"
                android:paddingTop="@dimen/dm010">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务分类:"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024"
                    android:visibility="invisible" />

                <EditText
                    android:editable="false"
                    android:id="@+id/pop_task_search_zdlf_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:background="@mipmap/task_search_zdlf_date"
                    android:padding="@dimen/dm010"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm022" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm040"
            android:layout_marginLeft="@dimen/dm038"
            android:layout_marginRight="@dimen/dm038"
            android:layout_marginTop="@dimen/dm030"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/pop_task_search_zdlf_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/task_search_zdlf_determine_click_after"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/pop_task_search_zdlf_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm060"
                android:background="@mipmap/task_search_zdlf_determine_click_before"
                android:gravity="center"
                android:text="重置"
                android:textColor="#333333" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>