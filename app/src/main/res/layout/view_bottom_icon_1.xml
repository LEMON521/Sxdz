<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="46dp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center">
    <!--android:layout_width="46dp"-->

        <!--竖直分布 tv在上，iv在下-->
        <LinearLayout
            android:id="@+id/view_bottom_vertical_tv_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/view_bottom_vertical_text_top"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center"
                android:text="上部"
                android:textColor="@color/gray"
                android:textSize="10sp" />
            <ImageView
                android:id="@+id/view_bottom_vertical_iv_bottom"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/nav_sao" />
        </LinearLayout>

        <!--竖直分布 iv在上，tv在下-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/view_bottom_vertical_iv_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/view_bottom_vertical_iv_top"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/nav_sao" />

            <TextView
                android:id="@+id/view_bottom_vertical_text_bottom"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center"
                android:text="下部"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </LinearLayout>

        <!--水平分布-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/view_bottom_horizontal_tv_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--android:layout_width="16dp"-->
            <TextView
                android:id="@+id/view_bottom_horizontal_text_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="左部"
                android:textColor="@color/gray"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/view_bottom_horizontal_iv_right"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/nav_sao" />
        </LinearLayout>

        <!--水平分布-->
        <LinearLayout
            android:gravity="center"
            android:id="@+id/view_bottom_horizontal_iv_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_bottom_horizontal_iv_left"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/nav_sao" />
            <!--android:layout_width="16dp"-->
            <TextView
                android:id="@+id/view_bottom_horizontal_text_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="右部"
                android:textColor="@color/gray"
                android:textSize="10sp" />
        </LinearLayout>

</FrameLayout>