<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical"

    android:padding="@dimen/dm010">

    <LinearLayout
        android:paddingRight="@dimen/dm010"
        android:paddingLeft="@dimen/dm010"
        android:paddingTop="@dimen/dm040"
        android:paddingBottom="@dimen/dm040"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/biankuang_wite_shixin"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/biankuang_wite_shixin"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dm010">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dm005"
                android:text="电厂名称:"
                android:textColor="@color/aMap_black"
                android:textSize="@dimen/dm024" />

            <EditText
                android:id="@+id/pop_query_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/biankuang_gray"
                android:padding="@dimen/dm005"
                android:textSize="@dimen/dm026" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dm010">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dm005"
                android:text="工程编号:"
                android:textColor="@color/aMap_black"
                android:textSize="@dimen/dm026" />

            <EditText
                android:id="@+id/pop_query_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@drawable/biankuang_gray"
                android:padding="@dimen/dm005"
                android:textSize="@dimen/dm026" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dm010">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dm005"
                android:text="开始时间:"
                android:textColor="@color/aMap_black"
                android:textSize="@dimen/dm026" />

            <EditText

                android:id="@+id/pop_query_start_time_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/biankuang_gray"
                android:editable="false"
                android:padding="@dimen/dm005"
                android:textSize="@dimen/dm026" />

            <ImageView
                android:id="@+id/pop_query_start_time_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/com_icon_add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dm010">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/dm005"
                android:text="完工时间:"
                android:textColor="@color/aMap_black"
                android:textSize="@dimen/dm026" />

            <EditText
                android:id="@+id/pop_query_end_time_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:editable="false"
                android:background="@drawable/biankuang_gray"
                android:padding="@dimen/dm005"
                android:textSize="@dimen/dm026" />

            <ImageView
                android:id="@+id/pop_query_end_time_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/com_icon_add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dm010">

            <TextView
                android:id="@+id/pop_query_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm040"
                android:background="@drawable/approve_shixin_blue"
                android:paddingBottom="@dimen/dm005"
                android:paddingLeft="@dimen/dm015"
                android:paddingRight="@dimen/dm015"
                android:paddingTop="@dimen/dm005"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/dm024" />

            <TextView
                android:id="@+id/pop_query_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm040"
                android:background="@drawable/approve_shixin_blue"
                android:paddingBottom="@dimen/dm005"
                android:paddingLeft="@dimen/dm015"
                android:paddingRight="@dimen/dm015"
                android:paddingTop="@dimen/dm005"
                android:text="重置"
                android:textColor="@color/white"
                android:textSize="@dimen/dm024" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>