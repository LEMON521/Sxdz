<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dm020">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:gravity="center"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="9">

            <EditText
                android:id="@+id/item_task_detail_add_title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/biankuang_gray"
                android:hint="请填写标题"
                android:padding="@dimen/dm005"
                android:textSize="@dimen/dm028" />

            <TextView
                android:id="@+id/item_task_detail_add_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dm005"
                android:text="标题"
                android:textColor="#333333"
                android:textSize="@dimen/dm028"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:id="@+id/item_task_detail_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/search_input_zdlf_delete" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020">

        <EditText
            android:id="@+id/item_task_detail_add_discription_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/biankuang_gray"
            android:hint="请填写详情"
            android:padding="@dimen/dm005"
            android:textSize="@dimen/dm024" />

        <TextView
            android:id="@+id/item_task_detail_add_discription_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dm005"
            android:text="标题"
            android:textColor="#55616A"
            android:textSize="@dimen/dm024"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>