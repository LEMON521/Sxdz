<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/top_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dm060">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="原"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="始"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="密"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="码"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#666666"
                android:textSize="@dimen/dm024" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_weight="3"
                android:background="@mipmap/modify_password_zdlf_frame"
                android:padding="@dimen/dm010">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/modify_password_zdlf_original_password" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm010"
                        android:layout_marginRight="@dimen/dm010"
                        android:src="@mipmap/modify_password_zdlf_dividing_line" />

                    <EditText
                        android:id="@+id/mine_zdlf_reset_password_old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入原始密码"
                        android:inputType="textPassword"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/dm024" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dm020"
            android:paddingTop="@dimen/dm020">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="新"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="密"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="码"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#666666"
                android:textSize="@dimen/dm024" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_weight="3"
                android:background="@mipmap/modify_password_zdlf_frame"
                android:padding="@dimen/dm010">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/modify_password_zdlf_new_password" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm010"
                        android:layout_marginRight="@dimen/dm010"
                        android:src="@mipmap/modify_password_zdlf_dividing_line" />

                    <EditText
                        android:id="@+id/mine_zdlf_reset_password_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入新密码"
                        android:inputType="textPassword"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/dm024" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="认"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="密"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="码"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#666666"
                android:textSize="@dimen/dm024" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_weight="3"
                android:background="@mipmap/modify_password_zdlf_frame"
                android:padding="@dimen/dm010">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/modify_password_zdlf_confirml_password" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm010"
                        android:layout_marginRight="@dimen/dm010"
                        android:src="@mipmap/modify_password_zdlf_dividing_line" />

                    <EditText
                        android:id="@+id/mine_zdlf_reset_password_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请确认新密码"
                        android:inputType="textPassword"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/dm024" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/mine_zdlf_reset_password_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm060"
            android:background="@drawable/yuanjiao_blue_1"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dm026" />
    </LinearLayout>

</LinearLayout>