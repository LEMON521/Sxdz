<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1">

        <cn.net.bjsoft.sxdz.view.RoundImageView
            android:id="@+id/disabuse_item_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/wlh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disabuse_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="名字"
                android:textSize="@dimen/dm026" />

            <TextView
                android:id="@+id/disabuse_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="2017.01.13"
                android:textSize="@dimen/dm020" />

            <TextView
                android:id="@+id/disabuse_item_dis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:text="描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，"
                android:textSize="@dimen/dm020" />

            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

                <GridView
                    android:id="@+id/disabuse_item_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:columnWidth="90dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp"></GridView>
            </ScrollView>

            <LinearLayout
                android:id="@+id/disabuse_item_happen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="发生时间："
                    android:textSize="@dimen/dm020" />

                <TextView
                    android:id="@+id/disabuse_item_happentime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="09/27  09:08"
                    android:textSize="@dimen/dm020" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">




                <LinearLayout
                    android:id="@+id/disabuse_item_already_replay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/page_home_1"
                    android:orientation="horizontal">

                    <cn.net.bjsoft.sxdz.view.RoundImageView
                        android:id="@+id/disabuse_item_replay_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/wlh" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/disabuse_item_replay_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:text="名字"
                            android:textSize="@dimen/dm026" />

                        <TextView
                            android:id="@+id/disabuse_item_replay_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="2017.01.13"
                            android:textSize="@dimen/dm020" />

                        <TextView
                            android:id="@+id/disabuse_item_replay_dis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:text="描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，"
                            android:textSize="@dimen/dm020" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm020"
                    android:id="@+id/disabuse_item_replay"
                    android:layout_width="@dimen/dm070"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/yuanjiao_blue"
                    android:gravity="center"
                    android:text="回复" />
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>