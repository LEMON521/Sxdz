<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_marginTop="@dimen/dm020"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/fragment_task_underling_detail_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/approve_left_shixin"
                android:gravity="center"
                android:paddingBottom="@dimen/dm010"
                android:paddingLeft="@dimen/dm030"
                android:paddingRight="@dimen/dm030"
                android:paddingTop="@dimen/dm010"
                android:text="已完成"
                android:textColor="@color/white"
                android:textSize="@dimen/dm024" />


            <TextView
                android:id="@+id/fragment_task_underling_detail_doing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/approve_right_shixin"
                android:gravity="center"
                android:paddingBottom="@dimen/dm010"
                android:paddingLeft="@dimen/dm030"
                android:paddingRight="@dimen/dm030"
                android:paddingTop="@dimen/dm010"
                android:text="未完成"
                android:textColor="@color/white"
                android:textSize="@dimen/dm024" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_task_underling_detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>

</LinearLayout>