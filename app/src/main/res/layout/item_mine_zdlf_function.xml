<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mine_zdlf_personnel_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm030"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dm020">

        <ImageView
            android:id="@+id/item_mine_zdlf_function_icon"
            android:layout_width="@dimen/dm048"
            android:layout_height="@dimen/dm048"
            android:src="@mipmap/mine_zdlf_personnel_management" />

        <TextView
            android:id="@+id/item_mine_zdlf_function_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_weight="3"
            android:text="人事管理"
            android:textColor="#333333"
            android:textSize="@dimen/dm028" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/mine_zdlf_more" />

    </LinearLayout>

</LinearLayout>