<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/approve_apply_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/login_line" />-->

        <TextView
            android:id="@+id/approve_apply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm015"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginTop="@dimen/dm018"
            android:text="人事审批"
            android:textSize="@dimen/dm028" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/approve_apply_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dm017"
        android:paddingLeft="@dimen/dm030"
        android:paddingRight="@dimen/dm030"
        android:paddingTop="@dimen/dm017">

        <ImageView
            android:id="@+id/approve_show_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/examination_and_approval_zdlf_contract_a_business_leave" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/approve_show_item_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="#55616A"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/approve_show_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="时间"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm020" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/approve_show_item_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部门"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:id="@+id/approve_show_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="姓名"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:id="@+id/approve_show_item_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="事由："
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:id="@+id/approve_show_item_mater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事由"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
