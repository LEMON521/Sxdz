<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/approve_apply_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/login_line" />-->

        <TextView
            android:id="@+id/approve_apply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm015"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginTop="@dimen/dm018"
            android:text="人事审批"
            android:textSize="@dimen/dm028" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/approve_apply_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dm017"
        android:paddingLeft="@dimen/dm030"
        android:paddingRight="@dimen/dm030"
        android:paddingTop="@dimen/dm017">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/approve_show_item_type"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:lines="2"
                    android:id="@+id/approve_show_item_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="#55616A"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:id="@+id/approve_show_item_mater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事由"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm022" />

                <TextView
                    android:id="@+id/approve_show_item_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="100分钟前"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm020" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:id="@+id/approve_show_item_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm010"
                        android:text="发起人:"
                        android:textColor="#999999"
                        android:textSize="@dimen/dm022" />

                    <TextView
                        android:layout_toRightOf="@+id/approve_show_item_department"
                        android:id="@+id/approve_show_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm010"
                        android:text="姓名"
                        android:textColor="#999999"
                        android:textSize="@dimen/dm022" />

                </RelativeLayout>

                <RelativeLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_toLeftOf="@+id/approve_show_item_type_2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审批类:"
                        android:textColor="#999999"
                        android:textSize="@dimen/dm022" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/approve_show_item_type_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型"
                        android:textColor="#999999"
                        android:textSize="@dimen/dm022" />

                </RelativeLayout>




            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/approve_show_item_type"
            android:layout_width="@dimen/dm060"
            android:layout_height="@dimen/dm060"
            android:layout_alignParentLeft="true"
            android:src="@drawable/examination_and_approval_zdlf_contract_a_business_leave" />
    </RelativeLayout>

</LinearLayout>
