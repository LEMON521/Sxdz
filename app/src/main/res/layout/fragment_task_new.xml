<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <RelativeLayout
        android:id="@+id/pop_position"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="#00000000"
        android:visibility="invisible"></RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm030">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="任务名称"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm026" />

                <EditText
                    android:id="@+id/fragment_task_new_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dm040"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入任务名称"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/gray"></RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm028">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="截止时间"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm026" />

                <EditText
                    android:id="@+id/fragment_task_new_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dm040"
                    android:background="@mipmap/new_task_zdlf_closing_date"
                    android:editable="false"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/gray"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm030">


                <EditText
                    android:padding="@dimen/dm005"
                    android:background="@color/background"
                    android:id="@+id/fragment_task_new_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm175"
                    android:gravity="top"
                    android:hint="撰写您的任务描述"
                    android:lineSpacingExtra="@dimen/dm008"
                    android:maxHeight="@dimen/dm175"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/dm024" />

                <EditText
                    android:padding="@dimen/dm005"
                    android:layout_marginTop="@dimen/dm010"
                    android:id="@+id/fragment_task_new_discription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm175"
                    android:background="@color/background"
                    android:gravity="top"
                    android:hint="撰写您的任务备注"
                    android:lineSpacingExtra="@dimen/dm008"
                    android:maxHeight="@dimen/dm175"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/dm024" />

                <ListView
                    android:id="@+id/fragment_task_new_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm030"
                    android:divider="#00000000"></ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm020"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm030">

                <TextView
                    android:layout_width="@dimen/dm100"
                    android:layout_height="wrap_content"
                    android:text="任务分类"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/fragment_task_new_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm060"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <RelativeLayout
                    android:id="@+id/fragment_task_new_classify_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mail_list_zdlf_right_arrow" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/gray"></RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm030">

                <TextView
                    android:layout_width="@dimen/dm100"
                    android:layout_height="wrap_content"
                    android:text="任务性质"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/fragment_task_new_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm060"
                    android:text="一般"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <RelativeLayout
                    android:id="@+id/fragment_task_new_level_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mail_list_zdlf_right_arrow" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm020"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm030">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务执行者"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm024" />

                <RelativeLayout
                    android:id="@+id/fragment_task_new_add_humen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/new_task_zdlf_add_to" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/gray"></RelativeLayout>

            <ListView
                android:id="@+id/fragment_task_new_humens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"></ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm030"
                android:background="@color/white"
                android:paddingBottom="@dimen/dm030"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:paddingTop="@dimen/dm030">

                <TextView
                    android:id="@+id/fragment_task_new_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/approve_shixin_blue"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dm020"
                    android:paddingTop="@dimen/dm020"
                    android:text="添加到任务并提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm026" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>