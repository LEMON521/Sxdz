<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dm010">


    <ImageView
        android:id="@+id/item_task_add_address_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dm020"
        android:src="@drawable/common_down" />

    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm020">

        <LinearLayout
            android:id="@+id/item_task_add_address_ll_department"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_task_add_address_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营销部"
                android:textColor="#333333"
                android:textSize="@dimen/dm026" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:text="("
                android:textColor="#999999"
                android:textSize="@dimen/dm026" />

            <TextView
                android:id="@+id/item_task_add_address_humen_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#999999"
                android:textSize="@dimen/dm026" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人)"
                android:textColor="#999999"
                android:textSize="@dimen/dm026" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_task_add_address_ll_humen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/item_task_add_address_checkbox"
                style="@style/TaskAddAddressListCheckboxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:focusable="false" />

            <cn.net.bjsoft.sxdz.view.CircleImageView
                android:layout_marginLeft="@dimen/dm020"
                android:id="@+id/item_task_add_address_humen_avatar"
                android:layout_width="@dimen/dm070"
                android:layout_height="@dimen/dm070"
                android:src="@drawable/wlh" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_task_add_address_humen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李欣雨"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm026" />

                <TextView
                    android:id="@+id/item_task_add_address_humen_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm010"
                    android:text="创意设计师"
                    android:textColor="#999999"
                    android:textSize="@dimen/dm024" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


    </RelativeLayout>


</LinearLayout>