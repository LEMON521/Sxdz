<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:visibility="gone"
        layout="@layout/top_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F0F0F0"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm250"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"
                    android:layout_marginTop="@dimen/dm030"
                    android:background="@drawable/biankuang_wite_shixin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm030"
                            android:layout_marginRight="@dimen/dm030"
                            android:layout_marginTop="@dimen/dm020"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <!--姓名 name-->
                            <TextView

                                android:id="@+id/mine_zdlf_name"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="#333333"
                                android:textSize="@dimen/dm030"
                                android:textStyle="bold" />

                            <!--部门 department-->
                            <TextView
                                android:id="@+id/mine_zdlf_department"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/dm020"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textColor="#666666"
                                android:textSize="@dimen/dm024" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm020"
                                android:background="@drawable/mine_dept_yellow_shixin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/dm005"
                                android:paddingLeft="@dimen/dm020"
                                android:paddingRight="@dimen/dm020"
                                android:paddingTop="@dimen/dm005">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/mine_zdlf_sale_left" />

                                <!--岗位 positions-->
                                <TextView
                                    android:id="@+id/mine_zdlf_positions"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dm010"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dm024" />
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dm020"
                            android:layout_weight="1"
                            android:gravity="center">

                            <!--头像 icon-->
                            <cn.net.bjsoft.sxdz.view.CircleImageView
                                android:id="@+id/mine_zdlf_icon"
                                android:layout_width="@dimen/dm120"
                                android:layout_height="@dimen/dm120"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="@dimen/dm010"
                                android:src="@drawable/tab_me_n" />
                        </RelativeLayout>

                    </LinearLayout>


                    <!--android:paddingBottom="@dimen/dm010"-->
                    <!--android:paddingTop="@dimen/dm010"-->


                    <!--公司 company-->
                    <TextView
                        android:id="@+id/mine_zdlf_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dm020"
                        android:layout_marginLeft="@dimen/dm030"
                        android:layout_marginRight="@dimen/dm030"
                        android:layout_marginTop="@dimen/dm020"
                        android:textColor="#666666"
                        android:textSize="@dimen/dm024" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mine_zdlf_address_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm030"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dm020">

                    <ImageView
                        android:layout_width="@dimen/dm048"
                        android:layout_height="@dimen/dm048"
                        android:src="@mipmap/mine_zdlf_mail_list" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:layout_weight="3"
                        android:text="通讯录"
                        android:textColor="#333333"
                        android:textSize="@dimen/dm028" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dm031"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/mine_zdlf_more" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mine_zdlf_reset_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm030"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dm020">

                    <ImageView
                        android:layout_width="@dimen/dm048"
                        android:layout_height="@dimen/dm048"
                        android:src="@mipmap/mine_zdlf_modify_password" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:layout_weight="3"
                        android:text="修改密码"
                        android:textColor="#333333"
                        android:textSize="@dimen/dm028" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dm031"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/mine_zdlf_more" />

                </LinearLayout>

                <ListView
                    android:id="@+id/mine_zdlf_function"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm030"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"></ListView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dm040"
                android:layout_marginTop="@dimen/dm080">

                <!--android:background="@drawable/exit_login"-->

                <TextView
                    android:id="@+id/mine_zdlf_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dm040"
                    android:layout_marginRight="@dimen/dm040"
                    android:background="@mipmap/mine_zdlf_exit_login"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dm015"
                    android:paddingTop="@dimen/dm015"
                    android:text="退出登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm024" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm020"></RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>

