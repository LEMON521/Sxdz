<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dm020">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/approve_approval_mater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="去医院看病"
            android:textColor="#333333"
            android:textSize="@dimen/dm026" />

        <TextView
            android:gravity="end"
            android:id="@+id/approve_approval_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="驳回"
            android:textColor="#F22626"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dm010"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/approve_approval_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="张三"
            android:textColor="#999999"
            android:textSize="@dimen/dm022" />

        <TextView
            android:gravity="end"
            android:id="@+id/approve_approval_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2017/03/09"
            android:textColor="#999999"
            android:textSize="@dimen/dm022" />

    </LinearLayout>
</LinearLayout>
