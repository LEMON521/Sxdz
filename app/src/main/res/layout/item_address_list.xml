<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:padding="@dimen/dm020"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_address_list_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_address_list_parent_icon"
                android:layout_width="@dimen/dm036"
                android:layout_height="@dimen/dm036"
                android:src="@drawable/wlh" />

            <TextView
                android:id="@+id/item_address_list_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:text="公司"
                android:textColor="#333333"
                android:textSize="@dimen/dm026" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_address_list_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--<ImageView-->
            <cn.net.bjsoft.sxdz.view.CircleImageView
                android:id="@+id/item_address_list_child_icon"
                android:layout_width="@dimen/dm044"
                android:layout_height="@dimen/dm044"
                android:src="@drawable/wlh" />

            <TextView
                android:id="@+id/item_address_list_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_toRightOf="@id/item_address_list_child_icon"
                android:text="张三丰"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="@dimen/dm024" />

            <TextView
                android:id="@+id/item_address_list_child_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:text="13900000000"
                android:textColor="#333333"
                android:textSize="@dimen/dm024" />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>