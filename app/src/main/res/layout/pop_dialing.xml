<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="@dimen/dm010">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuang_wite_shixin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_dialing_diale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm005"
            android:layout_marginTop="@dimen/dm005"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="普通电话拨打"
            android:textColor="@color/blue"
            android:textSize="@dimen/dm030" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@drawable/login_line" />

        <TextView

            android:id="@+id/pop_dialing_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm005"
            android:layout_marginTop="@dimen/dm005"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="复制"
            android:textColor="@color/blue"
            android:textSize="@dimen/dm030" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dm010"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm015"
        android:background="@drawable/biankuang_wite_shixin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:id="@+id/pop_dialing_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm005"
            android:layout_marginTop="@dimen/dm005"
            android:gravity="center"
            android:padding="@dimen/dm010"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="@dimen/dm030" />

    </LinearLayout>
</LinearLayout>