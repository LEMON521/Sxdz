<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/item_task_underling_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/item_task_underling_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dm010"
        android:paddingTop="@dimen/dm010">


        <TextView
            android:id="@+id/item_task_underling_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首席运行官"
            android:textColor="#333333"
            android:textSize="@dimen/dm024" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（"
            android:textColor="#333333"
            android:textSize="@dimen/dm024" />

        <TextView
            android:id="@+id/item_task_underling_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王五"
            android:textColor="#333333"
            android:textSize="@dimen/dm024" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="）"
            android:textColor="#333333"
            android:textSize="@dimen/dm024" />

        <FrameLayout
            android:id="@+id/item_task_underling_number_background"
            android:layout_width="@dimen/dm022"
            android:layout_height="@dimen/dm022"
            android:layout_marginLeft="@dimen/dm010">

            <cn.net.bjsoft.sxdz.view.CircleImageView

                android:layout_width="@dimen/dm022"
                android:layout_height="@dimen/dm022"
                android:src="@color/red" />

            <TextView
                android:id="@+id/item_task_underling_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="@dimen/dm012" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>