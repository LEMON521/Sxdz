<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pop_show_pushnotify_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/dm460"
            android:layout_height="@dimen/dm330"
            android:background="@drawable/biankuang_wite_shixin"
            android:orientation="vertical"
            android:padding="@dimen/dm020">

            <LinearLayout
                android:id="@+id/pop_show_pushnotify_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/dm004"
                    android:layout_height="@dimen/dm022"
                    android:background="#66B7FF"></RelativeLayout>

                <TextView
                    android:id="@+id/pop_show_pushnotify_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010"
                    android:text="标题"
                    android:textColor="#333333"
                    android:textSize="@dimen/dm026" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm170"
                android:layout_above="@+id/pop_show_pushnotify_confirm"
                android:layout_below="@+id/pop_show_pushnotify_title_ll"
                android:layout_marginBottom="@dimen/dm020"
                android:layout_marginTop="@dimen/dm020">

                <TextView
                    android:id="@+id/pop_show_pushnotify_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="内容内容内容内容内容内容"
                    android:textColor="#666666"
                    android:textSize="@dimen/dm022" />
            </ScrollView>


            <RelativeLayout
                android:id="@+id/pop_show_pushnotify_confirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm052"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/approve_shixin_blue"
                android:gravity="center"
                android:paddingLeft="@dimen/dm050"
                android:paddingRight="@dimen/dm050">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dm024" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>