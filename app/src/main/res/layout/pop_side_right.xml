<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#00000000"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <cn.net.bjsoft.sxdz.view.ChildrenListView
            android:id="@+id/pop_side_right_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#BEBEBE"
            android:dividerHeight="@dimen/dm002">

        </cn.net.bjsoft.sxdz.view.ChildrenListView>
        <RelativeLayout
            android:background="#BEBEBE"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm002"></RelativeLayout>

    </LinearLayout>


</LinearLayout>