<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dm100"
                android:layout_height="@dimen/dm100"
                android:layout_gravity="center"
                android:padding="@dimen/dm010">

                <RelativeLayout
                    android:layout_width="@dimen/dm080"
                    android:layout_height="@dimen/dm080"
                    android:layout_centerHorizontal="true">
                    <!--app:borderRadius="10dp"
                    app:borderWidth="1dp"-->

                    <ImageView
                        android:id="@+id/work_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        android:src="@drawable/com_icon_word" />

                    <TextView
                        android:id="@+id/work_num"
                        android:layout_width="@dimen/dm024"
                        android:layout_height="@dimen/dm024"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/common_red"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm016" />

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/work_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="@dimen/dm003"
                android:singleLine="true"
                android:text="文件名称"
                android:textColor="#333333"
                android:textSize="@dimen/dm022" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_alignParentTop="true"
                android:background="#F0F0F0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:layout_alignParentBottom="true"
                android:background="#F0F0F0" />

            <TextView
                android:layout_width="@dimen/dm001"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#F0F0F0" />

            <TextView
                android:layout_width="@dimen/dm001"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#F0F0F0" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
