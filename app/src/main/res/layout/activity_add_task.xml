<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.home.bartop.video.AddTaskActivity">
    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_weight="2">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="新增"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textSize="@dimen/dm030"/>
        <ImageView
            android:id="@+id/addtask_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/common_back"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:background="@drawable/nav"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/dm024"
                android:text="名称"/>
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:id="@+id/addtask_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入名称"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/dm024"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/dm026"
            android:text="请选择类型"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">
                <RadioButton
                    android:id="@+id/pic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="图片"
                    style="@style/radio_button"
                    android:textColor="@color/gray"
                    android:paddingLeft="5dp"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/video"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="视频"
                    android:paddingLeft="5dp"
                    style="@style/radio_button"
                    android:textColor="@color/gray"
                    />
                <RadioButton
                    android:id="@+id/audio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="录音"
                    android:paddingLeft="5dp"
                    style="@style/radio_button"
                    android:textColor="@color/gray"
                    />
            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <TextView
                android:id="@+id/addtask_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_btn_blue"
                android:text="确认"
                android:textSize="@dimen/dm026"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
