<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:padding="3dp"
        android:id="@+id/approve_show_item_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nav_add" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/approve_show_item_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textSize="@dimen/dm023" />

            <TextView
                android:id="@+id/approve_show_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:text="时间"
                android:textSize="@dimen/dm023" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/approve_show_item_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门"
                android:textSize="@dimen/dm023" />

            <TextView
                android:id="@+id/approve_show_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="姓名"
                android:textSize="@dimen/dm023" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请"
                android:textSize="@dimen/dm023" />

            <TextView
                android:id="@+id/approve_show_item_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textSize="@dimen/dm023" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="事由："
                android:textSize="@dimen/dm023" />

            <TextView
                android:id="@+id/approve_show_item_mater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事由"
                android:textSize="@dimen/dm023" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
