<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true">
            <!--app:borderRadius="10dp"
            app:borderWidth="1dp"-->
            <ImageView
                android:id="@+id/approve_new_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="fitXY"
                android:src="@drawable/com_icon_word" />

            <ImageView
                android:id="@+id/approve_new_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/common_close" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="@dimen/dm015"
        android:id="@+id/approve_new_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="文件名称" />
</LinearLayout>
