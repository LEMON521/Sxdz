<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/task_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题" />
        <TextView
            android:id="@+id/task_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态" />

        <cn.net.bjsoft.sxdz.view.CircleImageView
            android:id="@+id/task_item_overdue"
            android:layout_width="@dimen/dm020"
            android:layout_height="@dimen/dm020"
            android:src="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:layout_gravity="center"
            android:gravity="center">

            <cn.net.bjsoft.sxdz.view.CircleImageView
                android:layout_width="@dimen/dm080"
                android:layout_height="@dimen/dm080"
                android:src="@color/blue" />

            <TextView
                android:id="@+id/task_item_classify"
                android:layout_width="@dimen/dm060"
                android:layout_height="@dimen/dm060"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="分类"
                android:textColor="@color/white" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/task_item_name"
                android:text="发起人:王力宏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_start"
                android:text="发起时间:2017-12-13 13:13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/task_item_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止时间:2017-12-14 14:14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/task_item_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:text="任务等级" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>